@page "/"

<h1>Hello, world!</h1>

<p> networkstatus: @networkstatus </p>
<p>Current Location: @location</p>

<button @onclick="HandleSubmit" class="btncheck" style="margin-top:5px">Check Internet</button>


@{
    foreach(var l in Locations)
    {
        <p>Id: @l.Id</p>
        <p>Id: @l.Latitude</p>
        <p>Id: @l.Longitude</p>
    }

    foreach (Book b in RetrievedBooks)

    {
        <p>Book Name: @b.Name</p>

    }
}

